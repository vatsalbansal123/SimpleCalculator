Screen:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        MDTextField:
            id: text_input
            text: '0'
            halign: 'right'
            font_size: 65
            # size_hint: (1, 0.3)
            disabled: True
        GridLayout:
            cols: 4
            rows: 1
            size_hint_y: 0.25
            GridLayout:
                cols: 1
                rows: 1
                size_hint_x: 0.4
                FocusButton:
                    focus_color: 90/255,90/255,90/255,1
                    unfocus_color: 100/255,100/255,100/255,1
                    size_hint: (.2,.2)
                    font_size: 32
                    text: "C"
                    md_bg_color: 100/255,100/255,100/255,1
                    elevation: 0
                    on_release: app.clear_textinput()
            FocusButton:
                focus_color: 90/255,90/255,90/255,1
                unfocus_color: 100/255,100/255,100/255,1
                size_hint: (.2,.2)
                font_size: 32
                text: u"\u00AB"
                md_bg_color: 100/255,100/255,100/255,1
                elevation: 0
                on_release: app.clear_lastinput()
            FocusButton:
                focus_color: 245/255,130/255,0/245,1
                unfocus_color: 255/255,140/255,0/255, 1
                size_hint: (.2,.2)
                font_size: 32
                text: "/"
